@model IEnumerable<SAC.Domain.Models.Schedule>

@{
    ViewBag.Title = "Manage Schedules";
}

<h2>Manage Schedules</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table  class="display" id="tblSchedules">
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Club.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    <tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblSchedules').DataTable({
                "order": [[0, "desc"]]
            });
        });
    </script>
}