@model IEnumerable<SAC.Domain.Models.Competitor>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Competitors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<style>
    th {
        padding: 5px;
    }
</style>

<table class="display" id="tblCompetitors">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Archer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bonus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Archer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bonus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblCompetitors').DataTable();
        });
    </script>
}