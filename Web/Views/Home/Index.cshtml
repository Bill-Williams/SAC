    <div class="col-md-4">
        <h3>Latest Scores</h3>
        <p>bla bla bla</p>
        <p>@Html.ActionLink("See Scores Now", "Index", "Tournaments", null, new { @class = "btn btn-default" })</p>
    </div>

    <div class="col-md-4">
        <h3>Upcoming Tournaments</h3>
        <p>bla bla bla</p>
        <p>@Html.ActionLink("View Schedule", "Index", "Schedules", null, new { @class = "btn btn-default" })</p>
    </div>

    <div class="col-md-4">
        <h3>Local Clubs</h3>
        <p>bla bla bla</p>
        <p>@Html.ActionLink("Club List", "Index", "Clubs", null, new { @class = "btn btn-default" })</p>
    </div>

</div>
