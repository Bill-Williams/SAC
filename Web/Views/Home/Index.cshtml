@using SAC.Web.App_Start
@{
    ViewBag.Title = "Home";
}

<!-- Carousel
================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="first-slide" src="@Url.Content("~/Content/Images/carousel1.jpg")" alt="First slide">
            <div class="container">
                <div class="carousel-caption">
                    <h2>@Application.OrganizationName</h2>
                    <p>@Html.ActionLink("Join Today", "Login", "Account", null, new { @class = "btn btn-sm btn-info" })</p>
                </div>
            </div>
        </div>
        <div class="item">
            <img class="second-slide" src="@Url.Content("~/Content/Images/carousel2.jpg")" alt="Second slide">
            <div class="container">
                <div class="carousel-caption">
                    <h2>Recent Tournaments</h2>
                    <p>@Html.ActionLink("View Scores", "Index", "Tournaments", null, new { @class = "btn btn-sm btn-info" })</p>
                </div>
            </div>
        </div>
        <div class="item">
            <img class="third-slide" src="@Url.Content("~/Content/Images/carousel3.jpg")" alt="Third slide">
            <div class="container">
                <div class="carousel-caption">
                    <h2>Local Clubs</h2>
                    <p>@Html.ActionLink("More Info", "Index", "Clubs", null, new { @class = "btn btn-sm btn-info" })</p>
                </div>
            </div>
        </div>
    </div>
    
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" onfocus="document.activeElement.blur();">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" onfocus="document.activeElement.blur();">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div><!-- /.carousel -->

<br />

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading big-icon">
                <i class="glyphicon glyphicon-bullhorn"></i>
            </div>
            <div class="panel-body">
                <p>Find information about recent tournaments and view their results.</p>
                <p>@Html.ActionLink("See Scores Now", "Index", "Tournaments", null, new { @class = "btn btn-lg btn-warning" })</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading big-icon">
                <i class="glyphicon glyphicon-calendar"></i>
            </div>
            <div class="panel-body">
                <p>Find out about our upcoming tournaments and special events.</p>
                <p>@Html.ActionLink("View Schedule", "Index", "Schedules", null, new { @class = "btn btn-lg btn-warning" })</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading big-icon">
                <i class="glyphicon glyphicon-globe"></i>
            </div>
            <div class="panel-body">
                <p>First time here?  Get directions to the all our clubs right here.</p>
                <p>@Html.ActionLink("Club List", "Index", "Clubs", null, new { @class = "btn btn-lg btn-warning" })</p>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(".carousel").on("touchstart", function (event) {
            var xClick = event.originalEvent.touches[0].pageX;
            $(this).one("touchmove", function (event) {
                var xMove = event.originalEvent.touches[0].pageX;
                if (Math.floor(xClick - xMove) > 5) {
                    $(".carousel").carousel('next');
                }
                else if (Math.floor(xClick - xMove) < -5) {
                    $(".carousel").carousel('prev');
                }
            });
            $(".carousel").on("touchend", function () {
                $(this).off("touchmove");
            });
        });
    </script>
}
