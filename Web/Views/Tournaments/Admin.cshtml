@model IEnumerable<SAC.Domain.Models.Tournament>
@Scripts.Render("~/Content/datatables")

@{
    ViewBag.Title = "Manage Tournaments";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped table-hover tbl_pointer" id="tblTournaments">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Schedule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule.Club)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completed)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="location.href = '@(Url.Action("Edit", new { id = item.Id }))'">
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule.Club.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Completed)
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    <script>
        $(document).ready(function () {
            $('#tblTournaments').DataTable();
        });
    </script>
}