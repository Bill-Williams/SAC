@model IEnumerable<SAC.Domain.Models.Tournament>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Tournaments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<style>
    th {
        padding: 5px;
    }
</style>

<table class="display" id="tblTournaments">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Schedule.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule.Club.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Completed)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblTournaments').DataTable();
        });
    </script>
}