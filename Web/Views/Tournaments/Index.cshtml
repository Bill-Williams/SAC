@model IEnumerable<SAC.Domain.Models.Tournament>

@{
    ViewBag.Title = "Tournaments";
}

<div class="jumbotron">
    <h2>@ViewBag.Title</h2>
    <p>Find information about recent tournaments and view their results.</p>
</div>

<div class="panel">
    <div class="panel-body">
        <table class="table table-striped table-hover tbl_pointer" id="tblTournaments">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedules)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedules.First().Club)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr onclick="location.href = '@(Url.Action("Results", new { id = item.Id }))'">
                        <td>
                            @string.Join(",", item.Schedules.Select(s => s.ShortDate))
                        </td>
                        <td>
                            @string.Join(",", item.Schedules.Select(s => s.Club.Name).Distinct())
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    <script>
        $(document).ready(function () {
            $('#tblTournaments').DataTable();
        });
    </script>
}
