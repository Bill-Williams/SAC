@model SAC.Domain.Models.Tournament

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Tournament</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Schedules)
        </dt>

        <dd>
            @string.Join(",", Model.Schedules.Select(s => s.ShortDate))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Schedules.First().Club)
        </dt>

        <dd>
            @string.Join(",", Model.Schedules.Select(s => s.Club.Name).Distinct())
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Competitors)
        </dt>

        <dd>
            @Model.Competitors.Count().ToString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Completed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Completed)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.Partial("BtnDeleteCancelReturn", Model)
        </div>
    }
</div>
